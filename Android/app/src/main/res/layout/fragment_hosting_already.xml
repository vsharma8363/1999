<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hosting.HostViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hosting_party_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Party Name" />

        <TextView
            android:id="@+id/hosting_party_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/hosting_party_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/hosting_edit_party"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Party" />
    </LinearLayout>
</FrameLayout>