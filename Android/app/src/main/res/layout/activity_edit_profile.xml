<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditProfile">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/pictures_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Profile Photo:" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/add_image" />

        </LinearLayout>

        <TextView
            android:id="@+id/full_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Name:" />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="left"
            android:hint=""
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/email_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Email:" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="left"
            android:hint=""
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/email_textview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Instagram:" />

        <EditText
            android:id="@+id/instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="left"
            android:hint=""
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/bio_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Bio:" />

        <EditText
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:gravity="left"
            android:hint=""
            android:inputType="text" />

        <LinearLayout
            android:id="@+id/instagram_photos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/setup_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Changes" />

        <Button
            android:id="@+id/cancel_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Changes" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>